mixin alarmrow(alarm)
  li.alarm
    if alarm.triggered
      a(href='remove/'+alarm.id) X
    else
      a(href='remove/'+alarm.id onclick="return window.confirm('Are you sure you want to remove the alarm?')") X
    |
    | #{alarm.price}
    |
    if alarm.type === 'UP'
      | ↑
      |
    if alarm.type === 'DOWN'
      | ↓
      |
    if alarm.triggered
      | *
      |
